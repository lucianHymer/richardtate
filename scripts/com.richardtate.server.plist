<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.richardtate.server</string>

    <key>ProgramArguments</key>
    <array>
        <string>PROJECT_ROOT/server/server</string>
        <string>--config</string>
        <string>HOME/.config/richardtate/server.yaml</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>HOME/.config/richardtate/logs/server.log</string>

    <key>StandardErrorPath</key>
    <string>HOME/.config/richardtate/logs/server.err</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>HOME</key>
        <string>HOME</string>
    </dict>
</dict>
</plist>
